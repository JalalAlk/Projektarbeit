---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      header {
        background-color: #4CAF50;
        color: white;
        padding: 1rem;
        text-align: center;
      }

      footer {
        background-color: #4CAF50;
        color: white;
        text-align: center;
        padding: 1rem;
        margin-top: auto;
      }
      
      main {
        flex-grow: 1;
        padding: 2rem;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>{title}</h1>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; 2024 My Astro Page</p>
    </footer>
  </body>
</html>