---
interface Movie {
    title: string;
    description: string;
    image: string;
}

const { movie } = Astro.props as { movie: Movie };
---

<div class="card" onclick="this.classList.toggle('flipped')">
    <div class="card-inner">
        <div class="card-front">
            <img src={movie.image} alt={movie.title} />
        </div>
        <div class="card-back">
            <div class="card-back-content">
                <h2 class="card-title">{movie.title}</h2>
                <p class="card-description">{movie.description}</p>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background: #d6a70c;
        border-radius: 20px;
        box-shadow: inset 0 0 0 3px rgb(226 161 21);
        overflow: hidden;
        margin-bottom: 3rem;
        color: white;
        perspective: 10000px; /* For 3D effect */
        cursor: pointer;
    }

    .card-inner {
        position: relative;
        width: 100%;
        height: 600px; /* Adjust this height as needed */
        transition: transform 0.6s;
        transform-style: preserve-3d;
    }

    .card.flipped .card-inner {
        transform: rotateY(180deg);
    }

    .card-front, .card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 7px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .card-front {
        background: #d6a70c;
    }

    .card-front img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card-back {
        background: #1e1e1e;
        color: white;
        transform: rotateY(180deg);
        padding: 1rem;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .card-back-content {
        padding: 2rem; /* Increase padding for more space around the content */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .card-title {
        margin: 0;
        font-size: 1rem; /* Adjust font size */
        margin-bottom: 3rem; /* Adjust margin */
        color: #d6a70c; /* Adjust text color */
    }

    .card-description {
        margin: 0;
        font-size: 1.2rem; /* Adjust font size */
        color: #ccc; /* Adjust text color */
        line-height: 1.5; /* Adjust line height */
    }
</style>